<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/top_background"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".OwnerPlaceRegistrationActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Name"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/placeNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter place name"
        android:textSize="15sp"
        android:textColorHint="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Address"
        android:textSize="20sp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/placeAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter place address"
        android:textSize="15sp"
        android:textColorHint="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Description"
        android:textSize="20sp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/placeDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter place description"
        android:textSize="15sp"
        android:textColorHint="@color/white"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/plasec"
        android:outlineAmbientShadowColor="@color/white"
        android:contentDescription="Place type"
        android:outlineSpotShadowColor="@color/white"
        android:background="@drawable/top_background"

        />


    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton_selector"
        android:textColor="@color/blue"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Save" />

</LinearLayout>
</LinearLayout>
