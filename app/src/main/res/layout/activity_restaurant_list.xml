<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nude"
    tools:context=".RestaurantList">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav"
        app:itemTextColor="@color/background_color"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/restaurantImageView"
            android:layout_width="410dp"
            android:layout_height="187dp"
            android:scaleType="fitXY" />


        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@android:color/transparent"
            android:contentDescription="Search"
            android:padding="10dp"
            android:queryHint="ابحث هنا"
            android:src="@drawable/baseline_search_24" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent">


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="247dp"
            android:layout_height="39dp"
            android:layout_marginTop="194dp"
            android:layout_marginLeft="60dp"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5"
            android:outlineAmbientShadowColor="@color/nude"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="2100dp"
        android:layout_below="@+id/toolBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2100dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RestaurantList_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/nude"
            android:scrollbars="vertical"
            android:padding="2dp"
            />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حذف المكان"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/RestaurantList_recycler"


            />
        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعديل على المكان"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp"
            android:layout_below="@+id/RestaurantList_recycler"

            />
    </RelativeLayout>
    </ScrollView>


</RelativeLayout>