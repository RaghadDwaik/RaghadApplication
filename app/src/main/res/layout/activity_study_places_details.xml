<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudyPlacesDetails">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:itemIconTint="@color/background_color"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/restaurantImageView"
                    android:layout_width="match_parent"
                    android:layout_height="187dp"
                    android:scaleType="fitXY" />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:padding="10dp"
                    android:src="@drawable/baseline_search_24"
                    android:queryHint="ابحث هنا"
                    android:textColor="@android:color/black"
                    android:contentDescription="Search" />

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="247dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="60dp"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5" />

                <!-- HorizontalScrollView for images -->
                <HorizontalScrollView
                    android:id="@id/horizontalScrollContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingBar"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/horizontalScrollContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- First Image -->
                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="190dp"
                            android:layout_height="187dp"
                            android:scaleType="fitXY" />

                        <!-- Second Image -->
                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="190dp"
                            android:layout_height="187dp"
                            android:layout_marginStart="10dp"
                            android:scaleType="fitXY" />

                        <!-- Third Image -->
                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="190dp"
                            android:layout_height="187dp"
                            android:layout_marginStart="10dp"
                            android:scaleType="fitXY" />

                        <!-- Fourth Image -->
                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="190dp"
                            android:layout_height="187dp"
                            android:layout_marginStart="10dp"
                            android:scaleType="fitXY" />

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/horizontalScrollContainer"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="10dp"
                    android:text="الوصف"
                    android:textColor="@color/background_color"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Place"
                    android:layout_gravity="center"
                    android:layout_below="@id/description"

                    android:layout_marginLeft="150dp"
                    />



            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>