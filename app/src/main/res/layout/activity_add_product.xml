<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".OwnerAddService">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اضافة منتج"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:textColor="@color/background_color"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

<!--        <TextView-->
<!--            android:id="@+id/text_view_product_name"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Product Name"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="16sp"-->
<!--            android:textStyle="bold" />-->

        <EditText
            android:id="@+id/edit_text_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ادخل اسم المنتج"
            android:textColorHint="@color/background_color"
            android:background="@drawable/white_box"
            android:padding="15dp"
            android:layout_marginTop="20dp"/>

<!--        <TextView-->
<!--            android:id="@+id/text_view_product_description"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Product Description"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="16sp"-->
<!--            android:textStyle="bold"-->
<!--            android:layout_marginTop="16dp" />-->



        <EditText
            android:id="@+id/edit_text_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ادخل تفاصيل المنتج"
            android:textColorHint="@color/background_color"
            android:padding="15dp"
            android:background="@drawable/white_box"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/imagee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ادخل رابط صورة المنتج"
            android:padding="15dp"
            android:textColorHint="@color/background_color"
            android:background="@drawable/white_box"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" ادخل سعر المنتج"
            android:layout_marginTop="16dp"
            android:padding="15dp"
            android:textColorHint="@color/background_color"
            android:background="@drawable/white_box"/>

        <Button
            android:id="@+id/button_add_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اضافة"
            android:textColor="@color/background_color"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/white_box"
            android:layout_marginTop="30dp" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>
