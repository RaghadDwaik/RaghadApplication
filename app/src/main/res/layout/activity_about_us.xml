        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نود أن نشكر جميع المستخدمين الذين اختاروا استخدام تطبيقنا، ونعدكم بأننا سنواصل تحسين التطبيق وتقديم كل ما هو جديد ومبتكر لضمان تجربة مميزة وفعّالة للجميع"
        android:textSize="26sp"
        android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/background_color"
                android:layout_marginTop="50dp"/>

    <!-- Team Information -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="فريقنا:  ندى كلغاصي , رغد دويك ,أسماء رماني"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="110dp"/>

