    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تواصلوا معناعبر البريد الالكتروني:"
        android:textSize="25sp"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" aroundus2023n@gmail.com"
